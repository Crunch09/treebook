<h1>Listing posts</h1>

<table>
  <tr>
    <th>Author</th>
    <th>References</th>
    <th>User</th>
    <th>Text</th>
    <th>Likes</th>
    <th>Dislikes</th>
    <th>Comment to</th>
    <th>References</th>
    <th>Post</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.author %></td>
    <td><%= post.references %></td>
    <td><%= post.User %></td>
    <td><%= post.text %></td>
    <td><%= post.likes %></td>
    <td><%= post.dislikes %></td>
    <td><%= post.comment_to %></td>
    <td><%= post.references %></td>
    <td><%= post.Post %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

