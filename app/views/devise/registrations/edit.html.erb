<h2>Profil bearbeiten</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :firstname %><br />
    <%= f.text_field :firstname %>
  </div>
  <div class="field">
    <%= f.label :birthday %><br />
    <%= f.date_select :birthday %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to "Mit #{provider.to_s.titleize} verbinden", omniauth_authorize_path(resource_name, provider) %><br />
      <% end -%>
    <% end -%>

  <div class="field">
    <%= f.label :password %> <i>(freilassen, wenn du es nicht ändern willst)</i><br />
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(wir benötigen dein aktuelles passwort um die änderungen zu bestätigen)</i><br />
    <%= f.password_field :current_password %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Account löschen</h3>

<p>Unglücklich? <%= link_to "Meinen Account löschen", registration_path(resource_name), :confirm => "Bist du dir wirklich sicher?", :method => :delete %>.</p>

<%= link_to "Zurück", :back %>
