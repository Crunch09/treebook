<div id="top_bar">
  <div id="spacer"></div>
  <div id="signup_layer">
    <b>Registrieren</b>
    <div>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        
        <div><%= f.label :email, "E-Mail" %>
        <%= f.email_field :email, "width" => "100%", "size" => 0 %></div>
        
        <div><%= f.label :password, "Passwort" %>
        <%= f.password_field :password, "width" => "100%", "size" => 0 %></div>
        
        <div><%= f.label :password_confirmation, "Passwort wiederholen" %>
        <%= f.password_field :password_confirmation, "width" => "100%", "size" => 0 %></div>
        
        <div><%= f.label :firstname, "Vorname" %>
        <%= f.text_field :firstname, "width" => "100%", "size" => 0 %></div>
        
        <div><%= f.label :name, "Nachname" %>
        <%= f.text_field :name, "width" => "100%", "size" => 0 %></div>
        
        <div><%= f.label :birthday, "Geburtstag" %>
        <%= f.date_select :birthday, :start_year => 1950, :order => [:day, :month, :year], :end_year => (Time.now.year - 10), :default => 25.years.ago, :use_month_numbers => true %></div>
        
        <div><%= f.submit "Registrieren" %></div>
      <% end %>
    </div>
  </div>
  
  <div id="login_layer">
    <b>Einloggen</b>
    <div>
      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div><%= f.label :email, "E-Mail" %>
        <%= f.email_field :email, "width" => "100%", "size" => 0 %></div>

        <div><%= f.label :password, "Passwort" %>
        <%= f.password_field :password, "width" => "100%", "size" => 0 %></div>

        <% if devise_mapping.rememberable? -%>
          <div><%= f.check_box :remember_me %> <%= f.label :remember_me, "Erinnere dich an mich!" %></div>
        <% end -%>

        <div><%= f.submit "Einloggen" %></div>
      <% end %>

      <%= render "links" %>
    </div>
  </div>
  
  <div id="logo"><a href="/"><%= image_tag("treebook_logo.png") %></a></div>
</div>
<div id="tree_logo">
  <%= image_tag("treebook_treelogo.png") %> 
</div>
