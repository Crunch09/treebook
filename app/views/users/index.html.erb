<div id="top_bar">
  <div id="spacer"></div>
  <div id="user_menu">
  <% if user_signed_in? %>
  <b><%= "#{current_user.firstname} #{current_user.name}" %></b>
  <% end %>
    <div id="user_menu_layer">
      <ul>
        <li><a onclick="showProfile(<%= "#{current_user.id}" %>)">Mein Profil</a></li>
        <li><%= link_to "Ausloggen", destroy_user_session_path, :method => 'delete' %></li>
      </ul>
    </div>
  </div>
  <div id="logo"><a href="/"><%= image_tag("treebook_logo.png") %></a></div>
</div>
<% if user_signed_in? %>
<div id="main">
  <div id="sidebar">
    <div id="friendfinder">
      <h4>Finde neue Baumfreunde!</h4>
      <input type="text" name="friendsearch" value="Suche" />
      <div class="friendresult">
        
      </div>
    </div>
  </div>
  <div id="navigation">
    <span class="its_me" onclick="showProfile(<%= "#{current_user.id}" %>)">
      <%= image_tag(current_user.image, {:width => 48, :class => "avatar"}) %> <b><%= current_user.firstname %></b>
      <br style="clear: left;" />
    </span>
    <ul>
      <li><a href="#" name="Startseite" onclick="show('Startseite')">Startseite</a></li>
      <li><a href="#" name="Nachrichten" onclick="show('Nachrichten')">Nachrichten</a></li>
      <br />
      <li><b>Meine Trees</b></li>
      <% my_trees = current_user.owned_trees %>
      <% my_trees.each do |t| %>
      <%=raw  "<li><a href=\"#\" name=\"tree_#{t.id}_#{t.title}\" onclick=\"show('tree:#{t.id}')\">#{image_tag("tree_icon.png")} #{t.title}</a></li>" %>
      <% end %>
      <li><a href="#" name="addTree" onclick="addTree()">+ neuer Tree</a></li>
    </ul>
  </div>
  <div id="content">
    <div id="Startseite">
      <div>
        <textarea name="status_update" cols="71">Teile deine Gedanken!</textarea>
      </div>
      <div>
        <div id="actions"></div>
        <h3>Stream</h3>
        <div id="Stream"></div>
      </div>
    </div>
    <div id="Nachrichten">
       <h3>Nachrichten</h3>
    </div>
    <div id="Profil">
    
    </div>
  </div>
</div>
<% end %>
